@model ASP.NET_MVC_MajsterStrelby.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";

    //Get information about player from Model
    var experience = Model.ActualPlayerInformation._points;
    var level = Model.ActualPlayerInformation._level;

    //Calculate experience to level in which user is and experience to next level
    var expToHisLevel = (level - 1) * level * 50;
    var expToNextLevel = level * (level + 1) * 50;
    var expMissing = expToNextLevel - experience;

    //Divide experience to his leel to start this level from 0 experience
    experience -= expToHisLevel;
    expToNextLevel -= expToHisLevel;

    //Calculate how many percentage player have to get next level 
    double percentageToNextLevel = Math.Round(((experience * 1.0 / expToNextLevel * 1.0) * 100),0);
}

