@model ASP.NET_MVC_MajsterStrelby.Models.GameWordsModel
@{
    ViewBag.Title = "Game";
}

<div class="jumbotron">
    <h2 class="text-center">@Model.GetTaskWord()</h2>
    <h4 class="text-center">3:25</h4>
</div>


<ul>
   @foreach (var possibleWord in Model.GetPossibleWords())
    {
        <li>
            <button type="button" class="btn btn-default btn-lg">@possibleWord</button>
        </li>
    }
</ul>

